&lt;!DOCTYPE html><br>&lt;html><br>&lt;body><br><br><FONT COLOR=#ff0000>&lt;?php<br>$date1=date_create("2013-01-01");<br>$date2=date_create("2013-02-10");<br>$diff=date_diff($date1,$date2);<br><br>// %a outputs the total number of days<br>echo $diff->format("Total number of days: %a.");<br>echo "&lt;br>";<br><br>// %R outputs + beacause $date2 is after $date1 (a positive interval)<br>echo $diff->format("Total number of days: %R%a.");<br>echo "&lt;br>";<br><br>// %d outputs the number of days that is not already covered by the month<br>echo $diff->format("Month: %m, days: %d.");<br>?&gt;</FONT><br><br>&lt;/body><br>&lt;/html><br>

